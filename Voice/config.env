# 语音控制模块配置文件

# ===================
# API密钥配置
# ===================

# 阿里云DashScope API密钥（用于语音识别和LLM）
# 请将下面的 your_real_api_key_here 替换为您的真实API密钥
# 获取地址：https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=sk-20daa801ffcc4b3cad6f3b6353de6ebe

# 其他支持的LLM API密钥
OPENAI_API_KEY=your_openai_api_key_here
ZHIPUAI_API_KEY=your_zhipuai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ===================
# LLM配置
# ===================

# 使用的模型名称
LLM_MODEL_NAME=qwen-plus-latest
# LLM API地址
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# ===================
# 语音识别配置
# ===================

# 语音识别模型
VOICE_MODEL=qwen-omni-turbo-0119
# 音频格式
VOICE_FORMAT=wav
# 采样率
VOICE_SAMPLE_RATE=16000
# 是否启用语音功能
VOICE_ENABLED=true
# 自动确认语音识别结果
AUTO_CONFIRM_VOICE=false
# 最大录音时长（秒）
MAX_RECORDING_DURATION=30

# ===================
# MCP服务器配置
# ===================

# MCP服务器地址
MCP_SERVER_URL=http://localhost:8000

# ===================
# 音频文件配置
# ===================

# 临时音频文件目录
TEMP_AUDIO_DIR=temp_audio
# 音频文件清理间隔（秒）
AUDIO_CLEANUP_INTERVAL=3600

# ===================
# 调试配置
# ===================

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
# 是否保存详细日志
ENABLE_DEBUG_LOG=false 
